<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui001Crud.Pages.ClientesPages.ClientesListar"
             xmlns:cli="clr-namespace:Maui001Crud.Models.ClientesVistas"
             xmlns:data="clr-namespace:B007Clases.Data;assembly=B007Clases"
             x:DataType="cli:ClienteListarModelo"
             Title="Listado Clientes">
    <ContentPage.BindingContext>
        <cli:ClienteListarModelo >
            <x:Arguments>
                <data:B007CrudContext />
            </x:Arguments>
        </cli:ClienteListarModelo>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Button Text="Crear Cliente"
                Command="{Binding CrearClienteCommand}"
                BackgroundColor="Green" />
    </VerticalStackLayout>
</ContentPage>